@model FItnessTrack.Models.PersonalTraining

@{
    ViewData["Title"] = "PersonalTraining Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PersonalTraining Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Desciption)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Desciption)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Charge)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Charge)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.ServiceName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceId)
        </dd>
    </dl>
</div>

<form method="post" action="/Shop/AddToCart">
    <!--Hidden Field forhte selected produict id-->
    <input type="hidden" id="ServiceId" name="ServiceId" value="@Model.ServiceId" />
    <div class="form-group">
        <label style="color:#41ADFF" control-label" for="Quantity">Quantity: </label>
        <input name="Quantity" id="Quantity" required min="1" max="99999" type="number" class="input-small" />
    </div>
    <style>
        .input-small {
            width: 60px;
            height: 30px;
        }
    </style>
    <button class="btn btn-primary">Add To Cart</button>
</form>
<a href="javascript:history.go(-1);"> << Back</a>