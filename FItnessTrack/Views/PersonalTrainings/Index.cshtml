@model IEnumerable<FItnessTrack.Models.PersonalTraining>

@{
    ViewData["Title"] = "PersonalTraining";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add a new Training</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover table-striped" style="color:whitesmoke">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceId)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Charge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desciption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceId)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Charge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.ServiceName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Desciption)
                </td>
                <td class="text-left">
                    <a asp-action="Edit" asp-route-id="@item.TrainingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TrainingId">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.TrainingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
